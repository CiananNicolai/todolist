<core:FragmentDefinition
		xmlns="sap.m"
		xmlns:core="sap.ui.core"
		xmlns:u="sap.ui.unified">
	<ResponsivePopover
			id="legendPopover"
			title="Legend"
			placement="Bottom"
			showHeader="true">
		<PlanningCalendarLegend id="_IDGenPlanningCalendarLegend1"
				appointmentItems="{
					path : '../model/appointments.json/supportedAppointmentItems',
					templateShareable: true
				}">
			<appointmentItems>
				<u:CalendarLegendItem id="_IDGenCalendarLegendItem1" text="{text}" type="{type}" tooltip="{text}"/>
			</appointmentItems>
		</PlanningCalendarLegend>
	</ResponsivePopover>
</core:FragmentDefinition>